<h2 align=center>Simplist Ajax Web Page for the Particle.io Photon<br> (formerly the Spark.io Core) </h2>



<script>
var accessToken = "ACCESS TOKEN";
var deviceID = "DEVICE ID"


function callback(data, status){
	if (data.return_value == 1) {
		alert(" Message being sent");
	}
	else
	{
		alert("Could not Connect to your Device");
	}
}

function sendMessage(){
	message = $("#message").val();
   	$.post({params: message, access_token: accessToken}, callback);
}


</script>







<br><br>







<h1>Message Sender</h1>
<input id="message" value="Hello!" size="64"/>
<input type="button" value="Send" onclick="sendMessage()" /> <br/>






